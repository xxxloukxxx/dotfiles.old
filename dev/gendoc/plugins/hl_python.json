 * @brief Syntax highlight rules for the Python language
 *
 */
[
    /* 0 comments */    [ "#.*?$" ],
    /* 1 pseudo */      [  ],
    /* 2 operators */   [ "[:=\<\>\+\-\*\/%&\^\|!:\.][:=]?" ],
    /* 3 numbers */     [ "[\-]?[0-9][0-9\.e]*?" ],
    /* 4 strings */     [ "\"", "'", "b'" ],
    /* 5 separators */  [ "[", "]", "{", "}", ",", ";" ],
    /* 6 types */       [ "none", "from", "with", "new", "del" ],
    /* 7 keywords */    [ "import", "if", "else", "elif", "is", "in", "or", "and", "xor", "for", "while", "break", "continue",
                          "return" ]
]
