[
    /* 0 comments */    [ "\/\/.*?$", "\/\*.*?\*\/", "#.*?$" ],
    /* 1 pseudo */      [  ],
    /* 2 operators */   [ "\?php", "=>", "[=\<\>\+\-\*\/%&\^\:\.|!][=:]?" ],
    /* 3 numbers */     [ "[\-]?[0-9][0-9bx]?[0-9\.a-fp]*" ],
    /* 4 strings */     [ "\"", "'", "`" ],
    /* 5 separators */  [ "[", "]", "{", "}", ",", ";" ],
    /* 6 types */       [ "true", "false", "null", "public", "protected", "private", "static", "var", "new" ],
    /* 7 keywords */    [ "if", "then", "else", "endif", "switch", "case", "for", "foreach", "as", "while", "eval", "require",
                          "require_once", "include", "include_once", "do", "break", "continue", "function", "return", "try",
                          "catch", "self", "this", "class", "die" ]
]
